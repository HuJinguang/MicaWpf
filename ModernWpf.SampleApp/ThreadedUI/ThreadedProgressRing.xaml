<UserControl
    x:Class="Glasssix.MicaUI.SampleApp.ThreadedUI.ThreadedProgressRing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    x:Name="Root"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ProgressRingForegroundThemeBrush" Color="{StaticResource SystemAccentColor}" />
    </UserControl.Resources>

    <ui:ProgressRing
        Width="60"
        Height="60"
        IsActive="{Binding ElementName=Root, Path=IsActive}" />

</UserControl>
