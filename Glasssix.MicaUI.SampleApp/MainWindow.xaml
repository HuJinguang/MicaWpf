<Window x:Name="Window"
        x:Class="Glasssix.MicaUI.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Glasssix.MicaUI.SampleApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://glasssix.com/winfx/xaml/toolkit/micaui"
        Title="ModernWPF Sample App"
        Width="1026"
        Height="802"
        ui:ThemeManager.IsThemeAware="True"
        ui:TitleBar.ExtendViewIntoTitleBar="True"
        ui:WindowHelper.SystemBackdropType="Mica"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d">
    <Grid>
        <Image x:Name="extendedSplashImage"
               Width="100"
               Height="100"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="pack://Application:,,,/Glasssix.MicaUI.SampleApp;component/Assets/AppIcon.ico" />

        <!--<local:NavigationRootPage x:Name="RootPage" />-->
    </Grid>
</Window>
